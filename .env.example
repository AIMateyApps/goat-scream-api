# Goat Screams API default configuration
# Copy this file to .env and override values as needed.

# Core server
PORT=3000
NODE_ENV=development

# Rate limiting & notifications (optional)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
SLACK_WEBHOOK_URL=

# Health + smoke checks used in CI and local scripts
HEALTH_URL=https://api.bleatbox.dev/health
HEALTH_PENDING_THRESHOLD=100
HEALTH_REQUIRE_DB=false
SMOKE_REQUIRE_DB=false

# Advanced API (toggle FULL_STACK to enable Mongo/Cloudinary powered routes)
FULL_STACK=false
MONGODB_URI=mongodb://localhost:27017/goatscreams
CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
ADMIN_TOKEN=replace-with-secure-token

# Circuit breaker settings (optional - defaults work well for most cases)
CIRCUIT_BREAKER_ENABLED=true
MONGO_CIRCUIT_TIMEOUT=10000
MONGO_CIRCUIT_ERROR_THRESHOLD=50
MONGO_CIRCUIT_RESET_TIMEOUT=30000

# Error tracking (Sentry)
# Get your DSN from https://sentry.io -> Project Settings -> Client Keys
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
# Set to 'true' to also track 4xx errors (default: only 5xx)
ERROR_TRACKING_TRACK_4XX=false
