{
  "name": "goat-scream-api",
  "version": "0.1.0",
  "description": "Production-ready Express.js REST API serving curated goat scream audio. A teaching repository demonstrating API best practices.",
  "main": "server.js",
  "type": "commonjs",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.23.0",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "lint": "eslint src/ tests/ scripts/ --ext .js",
    "lint:fix": "eslint src/ tests/ scripts/ --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "seed": "node scripts/seed.js",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "lint:openapi": "swagger-cli validate docs/openapi.yaml",
    "smoke": "node scripts/smoke-test.js",
    "stats:aggregate": "node scripts/aggregate-stats.js",
    "sync:audit": "node scripts/audit/cloud-vs-db-diff.js && node scripts/audit-screams.js",
    "sync:fix": "node scripts/audit/scan-cloudinary-dups.js && node scripts/audit/prune-cloudinary-dups.js --apply && node scripts/audit/remove-db-only-ids.js --apply && node scripts/audit/cloud-vs-db-diff.js && node scripts/audit-screams.js",
    "export:fun": "node scripts/export-public-screams.js",
    "export:api": "node scripts/export-from-api.js",
    "generate:sdk": "openapi-generator-cli generate --generator-key typescript-sdk",
    "purge:source": "node scripts/purge-source.js",
    "db:cleanup": "node scripts/cleanup-db-to-snapshot.js",
    "prepare": "node scripts/run-husky.js"
  },
  "keywords": [
    "goat",
    "api",
    "express",
    "rest-api",
    "nodejs",
    "teaching",
    "audio",
    "production-ready",
    "mongodb",
    "cloudinary"
  ],
  "author": "Adam Grenier <adam@yesand.one>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AIMateyApps/goat-scream-api.git"
  },
  "bugs": {
    "url": "https://github.com/AIMateyApps/goat-scream-api/issues"
  },
  "homepage": "https://github.com/AIMateyApps/goat-scream-api#readme",
  "dependencies": {
    "@sentry/node": "^10.27.0",
    "axios": "^1.13.2",
    "cloudinary": "^2.7.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "fast-glob": "^3.3.2",
    "helmet": "^8.1.0",
    "js-yaml": "^4.1.1",
    "mongoose": "^8.7.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "music-metadata": "^8.2.0",
    "opossum": "^9.0.0",
    "prom-client": "^15.1.3",
    "redis": "^5.10.0",
    "swagger-ui-express": "^5.0.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@openapitools/openapi-generator-cli": "^2.25.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.2.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.7",
    "mongodb-memory-server": "^10.3.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.1",
    "supertest": "^7.1.4",
    "swagger-cli": "^4.0.4"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "js-yaml": ">=4.1.1"
    }
  }
}
