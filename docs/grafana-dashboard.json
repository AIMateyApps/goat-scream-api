{
  "dashboard": {
    "title": "Goat Screams API - Prometheus Metrics",
    "tags": ["goat-screams", "api", "prometheus"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Request Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{path}}",
            "refId": "A"
          }
        ],
        "yaxes": [{ "format": "reqps", "label": "Requests/sec" }, { "format": "short" }],
        "xaxis": { "mode": "time" },
        "legend": { "show": true, "values": true, "current": true }
      },
      {
        "id": 2,
        "title": "HTTP Request Duration (p50, p95, p99)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [{ "format": "s", "label": "Duration" }, { "format": "short" }],
        "xaxis": { "mode": "time" },
        "legend": { "show": true, "values": true, "current": true }
      },
      {
        "id": 3,
        "title": "Active Connections",
        "type": "graph",
        "gridPos": { "h": 8, "w": 6, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "http_active_connections",
            "legendFormat": "Active Connections",
            "refId": "A"
          }
        ],
        "yaxes": [{ "format": "short", "label": "Connections" }, { "format": "short" }],
        "xaxis": { "mode": "time" }
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 6, "x": 6, "y": 8 },
        "targets": [
          {
            "expr": "rate(http_errors_total[5m])",
            "legendFormat": "{{error_type}} - {{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [{ "format": "reqps", "label": "Errors/sec" }, { "format": "short" }],
        "xaxis": { "mode": "time" },
        "legend": { "show": true, "values": true }
      },
      {
        "id": 5,
        "title": "Cache Hit Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "cache_hit_rate",
            "legendFormat": "{{cache_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "percent", "label": "Hit Rate %", "max": 100, "min": 0 },
          { "format": "short" }
        ],
        "xaxis": { "mode": "time" },
        "legend": { "show": true }
      },
      {
        "id": 6,
        "title": "Cache Operations (Hits vs Misses)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 6, "x": 18, "y": 8 },
        "targets": [
          {
            "expr": "rate(cache_hits_total[5m])",
            "legendFormat": "{{cache_type}} - Hits",
            "refId": "A"
          },
          {
            "expr": "rate(cache_misses_total[5m])",
            "legendFormat": "{{cache_type}} - Misses",
            "refId": "B"
          }
        ],
        "yaxes": [{ "format": "ops", "label": "Operations/sec" }, { "format": "short" }],
        "xaxis": { "mode": "time" },
        "legend": { "show": true, "values": true }
      },
      {
        "id": 7,
        "title": "HTTP Status Code Distribution",
        "type": "piechart",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "sum by (status) (rate(http_requests_total[5m]))",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "Top Request Paths",
        "type": "table",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "targets": [
          {
            "expr": "topk(10, sum by (path) (rate(http_requests_total[5m])))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true
              },
              "indexByName": {
                "Value": 0,
                "path": 1
              },
              "renameByName": {
                "Value": "Requests/sec",
                "path": "Path"
              }
            }
          }
        ]
      },
      {
        "id": 9,
        "title": "System Metrics (CPU, Memory)",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
        "targets": [
          {
            "expr": "rate(process_cpu_user_seconds_total[5m]) * 100",
            "legendFormat": "CPU User %",
            "refId": "A"
          },
          {
            "expr": "rate(process_cpu_system_seconds_total[5m]) * 100",
            "legendFormat": "CPU System %",
            "refId": "B"
          },
          {
            "expr": "process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "Memory (MB)",
            "refId": "C"
          }
        ],
        "yaxes": [{ "format": "short", "label": "CPU % / Memory MB" }, { "format": "short" }],
        "xaxis": { "mode": "time" },
        "legend": { "show": true, "values": true }
      },
      {
        "id": 10,
        "title": "Cache Operations Total",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 24 },
        "targets": [
          {
            "expr": "sum(rate(cache_operations_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "decimals": 2
          }
        }
      },
      {
        "id": 11,
        "title": "Total Requests",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 24 },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "decimals": 2
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    }
  }
}
